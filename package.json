{
  "name": "redbus-clone-mean",
  "version": "1.0.0",
  "description": "TedBus is a MEAN stack application that replicates the functionalities of the popular bus booking service, RedBus. The application provides users with the ability to search for bus routes, book tickets, and manage their bookings.",
  "main": "index.js",
  "scripts": {
    "start:frontend": "cd frontend && ng serve",
    "start:backend": "node frontend/server/index.js",
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "build:frontend": "cd frontend && ng build --prod",
    "build:backend": "cd frontend/server && npm run build",
    "build": "concurrently \"npm run build:frontend\" \"npm run build:backend\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^9.0.1",
    "dotenv": "^16.4.5"
  }
}
